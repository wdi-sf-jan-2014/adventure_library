<h1><%=@adventure.title%></h1>

<%= form_for [@adventure, @page] do |f| %>
  <%= f.submit %><br><br>
      <%= f.text_field :name, placeholder: "page name" %><br>
      <%= f.text_area :text, placeholder: "write the next page of your adventure here" %><br><br>
  <%end%>  

  <% @adventure.pages.each do |page| %>
  <div>page name: <%= page.name %><br>
  text: <%= page.text %></div><br>
<% end %>
  