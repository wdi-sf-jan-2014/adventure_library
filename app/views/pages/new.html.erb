<div class="header">
    <h1><%= @adv.title %></h1>
  </div>

<div class="header">
  <h3>Create a new page</h3>
</div>

<div>
  <%= form_for [@adv, @page] do |f| %>

    <%= f.text_field :name, placeholder: "Page name", autofocus: true, class: "form-control", required: true %>
    <%= f.text_area :text, placeholder: "Write your page", class: "form-control" %>

    <%= f.submit class: "btn btn-success btn-lg" %>

  <% end %>
</div>
