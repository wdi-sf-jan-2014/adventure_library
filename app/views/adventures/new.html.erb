<h1>Create your own adventure!</h1>
 
<%= form_for @adventure do |f| %>
  
  <%= f.field_label :author %> <br>
  <%= f.text_field :author %>
  <br>
  <%= f.field_label :title %> <br>
  <%= f.text_field :title %>
  <br>
  
  <%= fields_for @adventure.page do |x| %>
    
    <%= x.field_label :name %> <br>
    <%= x.text_field :name %>
    <br>
    <%= x.field_label :text %> <br>
    <%= x.text_area :text %>
  
  <% end %> 
  
  <br>
  <%= f.submit %>

<% end %>