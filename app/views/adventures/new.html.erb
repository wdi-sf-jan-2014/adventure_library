<h1>New Adventure</h1>
<p>Find me in app/views/adventures/new.html.erb</p>

<%= form_for @adventure do |a| %>
  <%= a.label :title %>
  <%= a.text_field :title %></br>
  <%= a.label :author %>
  <%= a.text_field :author %></br></br>

  <h3>Add Page</h3>
  <%= a.fields_for :pages, @adventure.pages.build do |p|%>
    <%= p.label :name %>
    <%= p.text_field :name %></br>
    <%= p.label :text %></br>
    <%= p.text_area :text %>
  <%end%>
  <br>
  <%= a.submit %>
<%end%>