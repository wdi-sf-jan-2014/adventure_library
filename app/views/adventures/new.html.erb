<h1>START A NEW ADVENTURE</h1>

<%= form_for @adventure do |f| %>
  <%= f.text_field :title, placeholder: "adventure title" %><br>
  <%= f.text_field :author, placeholder: "author name" %><br>
  <h4>Add a Start Page</h4><br>
  <%= f.fields_for :pages, @adventure.pages.build do |p| %>
    <%= p.text_field :name, value: "start" %><br>
    <%= p.text_field :text, placeholder: "add your start page text here" %><br>
  <% end %>
  <%= f.submit %>
<% end %>