<h2> Add a new adventure: </h2><br>

<!-- <button id="plus_button">+1 page</button>
<button id="minus_button">-1 page</button><br><br> -->

<%= form_for @adventure do |f| %>
  <%= f.submit %><br><br>
  <%= f.text_field :title, placeholder: "title" %><br>
  <%= f.text_field :author, placeholder: "author" %><br><br>
  <%= f.hidden_field :guid, :value => SecureRandom.urlsafe_base64(10) %>
    <%=  f.fields_for :pages, @adventure.pages.build do |b| %>
      <%= b.hidden_field :name, :value => "start" %><br>
      <%= b.text_area :text, placeholder: "write the first page of your adventure here" %><br><br>
    <%end%>
    <div id="more_page_to"></div>      
<%end%>

<a href="/adventures">see all adventures</a>

<style>
#more_page{
  display:none;
}
</style>

<script type="text/javascript">

$("#plus_button").click(function(){
  $("#more_page_from").clone().appendTo( "#more_page_to" );
});

$("#minus_button").click(function(){
  $("#more_page_to").empty();
});

</script>